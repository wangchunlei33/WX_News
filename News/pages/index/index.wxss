/**index.wxss**/
.news-page {
  display: flex;
  flex-direction: column;
  min-height: 1250rpx;
}

.slide-image {
  width: 100%;
}

.news-item {
  display: flex;
}

.item-left {
  padding: 5px;
}

.item-right {
  padding: 5px 5px 5px 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title-wrap {
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 20px;
}

.title {
  font-size: 15px;
  color: #333;
}

.info {
  display: flex;
  justify-content: space-between;
  font-size: 13px;
}

.source {
  color: #777;
}

.date {
  color: #999;
}